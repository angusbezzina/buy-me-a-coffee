{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/web3/*": ["../../packages/web3/typechain-types/*"],
      "@react/*": ["./src/components/react/*"]
    }
  }
}
